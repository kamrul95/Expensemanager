<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonAddExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add Expense"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/buttonExpenseDetails"
        android:layout_alignRight="@+id/buttonExpenseDetails"
        />
    <Button
        android:id="@+id/buttonAddIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAddExpense"
        android:text="Add Income"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/buttonExpenseDetails"
        android:layout_alignRight="@+id/buttonExpenseDetails"
        />
    <Button
        android:id="@+id/buttonExpenseDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Expense Details"
        android:layout_below="@+id/buttonAddIncome"
        android:layout_marginTop="10dp"
       />


</RelativeLayout>